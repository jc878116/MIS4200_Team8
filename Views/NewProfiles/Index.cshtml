@model IEnumerable<MIS4200_Team8.Models.Profile>

@{
    ViewBag.Title = "Employee List";
}

<h2>Employee List</h2>

@*<p>
    @Html.ActionLink("Create New Employee", "Create")
</p>*@

@*<searh class="text-muted">*@
       @using (Html.BeginForm("Index", "NewProfiles", FormMethod.Get))
       {
           <p>
               Find by name: @Html.TextBox("searchString")
               <input type="submit" value="Search" />
           </p>

       }

<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Business Unit
        </th>
        <th>
            Hire Date
        </th>
        <th>
            Job Title
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.firstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.businessUnitLocation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hireDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.jobTitleName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.profileID }) |
            @Html.ActionLink("Details", "Details", new { id=item.profileID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.profileID })
        </td>
    </tr>
}

</table>
