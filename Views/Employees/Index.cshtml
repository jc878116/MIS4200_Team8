@model IEnumerable<MIS4200_Team8.Models.Employees>

@{
    ViewBag.Title = "Employees List";
}

<h2>Employees List</h2>

<p>
    @Html.ActionLink("Create New Employee", "Create")
</p>
<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Business Unit
        </th>
        <th>
            Hire Date
        </th>
        <th>
            Job Title
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.firstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.businessUnit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hireDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.jobTitle)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.employeesID }) |
            @Html.ActionLink("Details", "Details", new { id=item.employeesID }) |
            @*@Html.ActionLink("Delete", "Delete", new { id=item.employeesID })*@
        </td>
    </tr>
}

</table>
